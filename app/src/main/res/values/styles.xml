<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:maxWidth">@dimen/list_item_name_max_width</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="ListItemResetFreq">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:gravity">center|bottom</item>
    </style>

    <style name="ListItemScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/list_item_score_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditHabitLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for an EditText field in the editor -->
    <style name="EditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="EditHabitLinearStyle">
        <item name="android:paddingRight">@dimen/edit_category_padding</item>
        <item name="android:paddingLeft">@dimen/edit_category_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditHabitNameForm" parent="EditHabitLinearStyle">
        <item name="android:paddingLeft">@dimen/edit_category_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>

    <style name="EditHabitRelativeStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="FormInputColor">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="FormSpinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ReminderTextView" parent="FormSpinner">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="FormScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ScoreButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="DecScoreButton" parent="ScoreButton">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
    </style>

    <style name="IncScoreButton" parent="ScoreButton">
        <item name="android:layout_marginRight">@dimen/default_padding</item>
    </style>

    <style name="ScoreTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">80sp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display3</item>
    </style>

    <style name="BarChart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bar_chart_height</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
        <item name="android:layout_marginLeft">@dimen/padding_medium</item>
    </style>

    <style name="BarChartDateSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|right</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
    </style>

    <style name="EmptyView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/no_data_available</item>
        <item name="android:visibility">gone</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="DateRangeTextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
    </style>

</resources>

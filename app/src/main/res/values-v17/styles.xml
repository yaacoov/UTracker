<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditHabitLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/edit_category_padding</item>
        <item name="android:paddingStart">@dimen/edit_category_padding</item>
    </style>

    <style name="EditHabitNameForm" parent="EditHabitLinearStyle">
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditHabitRelativeStyle">
        <item name="android:paddingStart">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ReminderTextView" parent="FormSpinner">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="FormScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="DecScoreButton" parent="ScoreButton">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginStart">@dimen/default_padding</item>
    </style>

    <style name="IncScoreButton" parent="ScoreButton">
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginEnd">@dimen/default_padding</item>
    </style>

    <style name="BarChart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bar_chart_height</item>
        <item name="android:layout_marginRight">@dimen/padding_medium</item>
        <item name="android:layout_marginLeft">@dimen/padding_medium</item>
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
    </style>

</resources>